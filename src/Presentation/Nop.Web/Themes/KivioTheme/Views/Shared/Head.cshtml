@using Nop.Core
@using Nop.Core.Domain.Catalog

@inject CatalogSettings catalogSettings
@inject IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    
    if (supportRtl)
    {
        NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/kiviotheme.styles.responsive.rtl.css");
        NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/kiviotheme.styles.rtl.css");
        NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/bootstrap.min.rtl.css");

    }
    else
    {
        NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/kiviotheme.styles.responsive.css");
        NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/kiviotheme.styles.css");
        NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/bootstrap.min.css");
    }



    //add swiper css file
    if (catalogSettings.DisplayAllPicturesOnCatalogPages)
    {
        NopHtml.AppendCssFileParts("~/lib_npm/swiper/swiper-bundle.min.css");
    }

    NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/slick.css");
    NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/slick-theme.css");
    NopHtml.AppendCssFileParts($"~/Themes/KivioTheme/Content/css/fontawesome-all.min.css");

    //add jQuery UI css file
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");
}